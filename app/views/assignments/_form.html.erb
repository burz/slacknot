<%= form_for [@user, @klass, @assignment], html: { class: 'uk-form' } do |f| %>
  <% if @assignment.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@assignment.errors.count, "error") %>
        prohibited this assignment from being saved:
      </h2>

      <ul>
        <% @assignment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :assigned_on %><br>
    <%= f.date_select :assigned_on %>
  </div>

  <div class="field">
    <%= f.label :due_on %><br>
    <%= f.date_select :due_on %>
  </div>

  <br />

  <div class="actions">
    <%= f.submit class: 'uk-button-primary' %>
  </div>
<% end %>

<br />
