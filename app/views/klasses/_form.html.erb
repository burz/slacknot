<%= form_for [@user, @klass], html: { class: 'uk-form' } do |f| %>
  <% if @klass.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@klass.errors.count, "error") %>
        prohibited this class from being saved:
      </h2>

      <ul>
        <% @klass.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="actions">
    <%= f.submit 'Create class', class: 'uk-button-primary' %>
  </div>
<% end %>

<br />
